"#MainWindow": {
	backgroundColor:"white"
},
"#MainWindow[platform=android]": {
   navBarHidden: true,
   exitOnClose: true
},
".navbar": {
	top: 0,
	left: '0dp',
	right: '0dp',
	height: '42dp',
	width: '100%',
	borderRadius: 0,
	backgroundGradient:{
      type:'linear',
      colors:[{color:'#d4d4d4',position:0.0},{color:'#c4c4c4',position:0.50},{color:'#b4b4b4',position:1.0}],
      backFillStart: false
   },
}
"Label": {
	height: Ti.UI.SIZE,
	color: "#000"
},
"Button": {
	borderRadius: 4,
	backgroundGradient:{
      type:'linear',
      colors:[{color:'#a3a3fa',position:0.0},{color:'#9393fa',position:0.50},{color:'#8383fa',position:1.0}],
      backFillStart: false
   },
  	height: '34dp',
},
"Button[platform=ios]": {
	style:Titanium.UI.iPhone.SystemButtonStyle.PLAIN,
	font: {
		fontSize: '16dp',
		fontWeight: 'normal'
	},
},
"Button[platform=android]": {
	font: {
		fontSize: '14dp',
		fontWeight: 'normal'
	},
},
".NavHeader": {
	font: {
		fontSize: '16dp',
		fontWeight: 'bold'
	},
	textAlign: 'center',
	color: "#000"
}
"#usage": {
	top: '50dp',
	left: '20dp',
	right: '20dp',
	font: {
		fontSize: '14dp',
		fontWeight: 'bold'
	},
	textAlign: 'center',
},
"#lungs": {
	width: '150dp',
	height: '150dp',
	image: '/lungs.png'
},
"#progress": {
	bottom: '90dp',
	width: '90%',
	height: Ti.UI.SIZE,
	min: 0,
	max: 7,
	value: 0,
	color: "#22F",
	font: {fontSize:'14dp', fontWeight:'normal'},
	visible: true
},
"#abortbut": {
	top: '4dp',
	right: '5dp',
	width: '90dp',
	title: 'Abort',
	visible: false
},
"#resetbut": {
	top: '4dp',
	left: '5dp',
	width: '90dp',
	title: 'Restart',
	visible: false
},
"#rr": {
	textAlign: 'center',
	font: {
		fontSize: '16dp',
		fontWeight: 'bold'
	},
	visible: false
},
"#mode": {
	visible: false,
	backgroundColor: 'transparent',
	backgroundImage: '/dropdown_bg.png',
	width: '230dp',
	height: '45dp',
	bottom: '5dp',
	right: '5dp'
},
"#mode_lbl": {
	font: {
		fontSize: '14dp',
		fontWeight: 'normal'
	},
	textAlign: 'left',
	color: "#eee"
}